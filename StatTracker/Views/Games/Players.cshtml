@model IEnumerable<StatTracker.Models.Player>

@{
    ViewBag.Title = "Players";
}

<h2>Players</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td>
                No players have been added yet.
            </td>
        </tr>
                
                }
                else
                {
                foreach (var player in Model)
                {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => player.Name)
            </td>
            <td>
                @Html.ActionLink("Stats", "Stats", new { id = player.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = player.Id })
            </td>
        </tr>
        }
        }

    </table>
